# =============================================================================
# AnnotateForge Environment Configuration
# =============================================================================
# IMPORTANT: Copy this file to .env and update with your actual values
# SECURITY: Never commit .env to version control!
# Generate strong keys: openssl rand -hex 32

# =============================================================================
# PostgreSQL Database
# =============================================================================
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_PORT=5432

# =============================================================================
# Redis Cache
# =============================================================================
REDIS_PORT=6379

# =============================================================================
# Backend API
# =============================================================================
BACKEND_PORT=8000
# Generate with: openssl rand -hex 32
SECRET_KEY=changeme_jwt_secret_key_min_32_chars
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# Database Connection Pool
# =============================================================================
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# =============================================================================
# Storage Configuration
# =============================================================================
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes

# =============================================================================
# ML Models
# =============================================================================
# YOLO options: yolov8n.pt (fastest), yolov8s.pt, yolov8m.pt, yolov8l.pt, yolov8x.pt (most accurate)
YOLO_MODEL=yolov8n.pt
# SAM2 options: sam2.1_t.pt (tiny), sam2.1_s.pt (small), sam2.1_b.pt (base), sam2.1_l.pt (large)
SAM2_MODEL=sam2.1_b.pt

# =============================================================================
# Performance
# =============================================================================
WORKER_COUNT=4
INFERENCE_TIMEOUT=30

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# =============================================================================
# CORS (Cross-Origin Resource Sharing)
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost

# =============================================================================
# Frontend
# =============================================================================
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000/ws

# =============================================================================
# Nginx (optional - for production deployment)
# =============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
